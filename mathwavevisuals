<!DOCTYPE html>
<html>
<head>
    <title>Math Functions Visualization</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.js"></script>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f5f5f5;
        }
        canvas {
            border: 1px solid;
        }
    </style>
</head>
<body>
    <script>
        function setup() {
            createCanvas(800, 600);
        }

        function draw() {
            background(220);
            stroke(0);
            let t = frameCount / 100;

            beginShape();
            for (let x = 0; x < width; x++) {
                let y = f1(x / 100, t) * height / 2;
                vertex(x, height / 2 - y);
            }
            endShape();
        }

        function f1(x, t) {
            let start = 0;
            let end = 0.7;
            let value = sin(x * t);
            let result = value < start ? 0 : value > end ? 1 : (value - start) / (end - start);
            return 4 * result;
        }
    </script>
</body>
</html>
